    <!-- P치gina principal -->
    <div class="main-page">
        <h1>Aceita sair comigo de novo?</h1>
        <a href="#" class="button yes-button" onclick="showThankYouPage()">Sim</a>
        <a href="#" class="button no-button" id="noButton" onmouseover="moveNoButton()">N칚o</a>
    </div>

    <!-- P치gina de agradecimento (inicialmente oculta) -->
    <div class="thank-you-page">
        <h1>Que incr칤vel!</h1>
        <p>Estou muito feliz que voc칡 aceitou sair comigo de novo! 游꿀</p>
        <a href="#" class="button" onclick="goBack()">Voltar</a>
    </div>

    <script>
        // Fun칞칚o para exibir a p치gina de agradecimento
        function showThankYouPage() {
            // Esconde a p치gina principal
            document.querySelector('.main-page').style.display = 'none';
            // Exibe a p치gina de agradecimento
            document.querySelector('.thank-you-page').style.display = 'flex';
        }

        // Fun칞칚o para voltar para a p치gina principal
        function goBack() {
            // Esconde a p치gina de agradecimento
            document.querySelector('.thank-you-page').style.display = 'none';
            // Exibe a p치gina principal
            document.querySelector('.main-page').style.display = 'flex';
        }

        // Fun칞칚o para mover o bot칚o "N칚o" de forma aleat칩ria
        function moveNoButton() {
            const noButton = document.querySelector('.no-button');
            const x = Math.random() * (window.innerWidth - noButton.offsetWidth);
            const y = Math.random() * (window.innerHeight - noButton.offsetHeight);
            noButton.style.left = `${x}px`;
            noButton.style.top = `${y}px`;
        }
    </script>

